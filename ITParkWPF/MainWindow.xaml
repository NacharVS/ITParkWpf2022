<Window x:Class="ITParkWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ITParkWPF"
        mc:Ignorable="d"
        Title="MyWpfApp" Height="550" Width="900" >
    <Grid Margin="0,0,-16,-6">
        <Grid.ColumnDefinitions>

        </Grid.ColumnDefinitions>
        <GroupBox Header="Registration" Margin="0,14,458,10" FontSize="24"/>
        <TextBox x:Name="Nametxt" HorizontalAlignment="Left" Margin="45,94,0,0" TextWrapping="Wrap" Text="Name" VerticalAlignment="Top" Width="413" FontSize="18" Height="48" GotFocus="Nametxt_GotFocus" />
        <TextBox x:Name="Logintxt" HorizontalAlignment="Left" Margin="45,167,0,0" TextWrapping="Wrap" Text="Login" VerticalAlignment="Top" Width="413" FontSize="20" Height="45" GotFocus="Logintxt_GotFocus" TextChanged="Logintxt_TextChanged" TextInput="Logintxt_TextInput"/>
        <TextBox x:Name="Emailtxt" HorizontalAlignment="Left" Margin="45,251,0,0" TextWrapping="Wrap" Text="E-mail" VerticalAlignment="Top" Width="413" FontSize="20" Height="43" GotFocus="Emailtxt_GotFocus"/>
        <TextBox x:Name="Phonetxt" HorizontalAlignment="Left" Margin="45,323,0,0" TextWrapping="Wrap" Text="Phone" VerticalAlignment="Top" Width="413" FontSize="20" Height="49" GotFocus="Phonetxt_GotFocus"/>
        <Button x:Name="SignUp" Content="Sign Up" HorizontalAlignment="Left" Margin="25,401,0,0" VerticalAlignment="Top" FontSize="22" Height="55" Width="204" Click="SignUp_Click"/>
        <ListBox x:Name="listLogin" Margin="486,32,32,22" Loaded="listLogin_Loaded" SelectionChanged="listLogin_SelectionChanged"/>
        <Button Content="UpdateUser" HorizontalAlignment="Left" Margin="247,401,0,0" VerticalAlignment="Top" Click="Button_Click" Width="207" Height="55"/>

    </Grid>
</Window>
